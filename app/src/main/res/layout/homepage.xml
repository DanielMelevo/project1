<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="323dp"
        android:layout_height="199dp"
        app:srcCompat="@drawable/HOMEPAGEPIC"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="107dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="117dp"
        android:layout_height="41dp"
        android:text="Exit"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="517dp" />

    <SearchView
        android:layout_width="321dp"
        android:layout_height="45dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="54dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="371dp"
        android:layout_height="39dp"
        android:fontFamily="casual"
        android:text="Save the World with this simple step"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="6dp" />

    <Button
        android:id="@+id/button3"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="237dp"
        android:layout_height="43dp"
        android:fontFamily="serif"
        android:text="Biodegradable"
        android:textAppearance="@android:style/TextAppearance.Widget.Button"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.421"
        tools:layout_editor_absoluteX="74dp" />

    <Button
        android:id="@+id/button4"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:fontFamily="serif"
        android:text="Non-Bio"
        android:textAppearance="@android:style/TextAppearance.Widget.Button"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="367dp" />

    <Button
        android:id="@+id/button5"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="231dp"
        android:layout_height="46dp"
        android:fontFamily="serif"
        android:text="Creators"
        android:textAppearance="@android:style/TextAppearance.Widget.Button"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="467dp" />

    <Button
        android:id="@+id/button6"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:fontFamily="serif"
        android:text="Recyclable"
        android:textAppearance="@android:style/TextAppearance.Widget.Button"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="414dp" />

</android.support.constraint.ConstraintLayout>